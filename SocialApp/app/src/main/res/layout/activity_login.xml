<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"



    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="login_package.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/login_relative">
    <TextView
        android:id="@+id/logIninfo"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"

        android:layout_marginTop="70dp"
        android:textSize="40sp"
        android:text="Log in to your account"

        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/email_login"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="E-mail"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/logIninfo"
        android:background="@drawable/rounded_corners_background_edittext"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:ems="10"
        android:background="@drawable/rounded_corners_background_edittext"
        android:hint="Password"
        android:textAlignment="center"
        android:inputType="textPassword"


        android:layout_below="@+id/email_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />
    </RelativeLayout>

    <Button

        android:id="@+id/LogInbutton"

        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/rounded_corners"

        android:onClick="LogIn"
        android:textColor="#fff"

        android:text="Log In"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_relative"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ResignUpButton"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_corners_background_edittext"


        android:layout_below="@+id/LogInbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="#00a0ff"
        android:text="Sign up "
        android:onClick="ReSignUp"
        />





</RelativeLayout>
